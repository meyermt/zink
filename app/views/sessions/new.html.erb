<div class="container">
  <div class="page-header">
    <h1 class="network-name">Sign In</h1>
  </div>

  <div class="row">
    <div class="col-sm-4">

    <%= form_tag("/sessions", method: 'post') do  %>

      <div class="form-group">
        <%= label_tag :username, "Username", class: 'intro-text' %>
        <%= text_field_tag :username, "", autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= label_tag :password, "Password" %>
        <%= password_field_tag :password, "", class: 'form-control' %>
      </div>

      <%= submit_tag "Login", class: 'btn btn-info btn-lg'%>
      or
      <%= link_to "Cancel", root_url %>
      or
      <%= link_to "Forgot Your Password?", "/resets/new" %>

    <% end %>

    </div>
  </div>
</div>
